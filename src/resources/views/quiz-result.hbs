<div class="container mt-5">
    <div class="card text-center">
        <div class="card-header bg-primary text-white">
            <h3>Kết quả Quiz</h3>
        </div>
        <div class="card-body">
            <h2 class="mb-4">Bạn đã hoàn thành Quiz!</h2>
            
            <div class="result-score">
                <i class="fas fa-check-circle text-success fa-3x mb-3"></i>
                <h3>Kết quả: <span class="text-primary">{{correctCount}}/{{totalQuestions}} câu đúng</span></h3>
                <h4 class="mt-3"> Bạn nhận được <span class="text-success">{{xpEarned}} XP</span></h4>
                
                {{#ifEquals correctCount totalQuestions}}
                    <div class="alert alert-success mt-3">
                        <strong>Xuất sắc!</strong> Bạn đã trả lời đúng tất cả các câu hỏi!
                    </div>
                {{else}}
                    {{#ifEquals correctCount 0}}
                        <div class="alert alert-danger mt-3">
                            <strong>Chưa đúng câu nào!</strong> Hãy thử lại nhé!
                        </div>
                    {{else}}
                        <div class="alert alert-info mt-3">
                            <strong>Tốt lắm!</strong> Bạn đã trả lời đúng {{correctCount}} câu.
                        </div>
                    {{/ifEquals}}
                {{/ifEquals}}
            </div>
            
            <div class="mt-4">
                <a href="/" class="btn btn-primary">Trở về trang chủ</a>
            </div>
        </div>
    </div>
</div>

<style>
    .result-score {
        padding: 2rem;
        background: #f8f9fa;
        border-radius: 1rem;
        margin: 2rem 0;
    }
</style>