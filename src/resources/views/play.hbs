<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h1>{{quiz.name}}</h1>
        </div>
        <div class="card-body">
            <p>{{quiz.description}}</p>
            <p><strong>Độ khó:</strong> {{quiz.difficulty}}</p>
            <p><strong>Thời gian:</strong> {{quiz.duration}} phút</p>
            
            <h3>Câu hỏi</h3>
            {{#if quiz.questions}}
                <div class="list-group">
                    {{#each quiz.questions}}
                        <div class="list-group-item">
                            <h5>{{this.questionText}}</h5>
                            <ol type="A">
                                {{#each this.options}}
                                    <li>{{this}}</li>
                                {{/each}}
                            </ol>
                            <p class="text-muted"><strong>Đáp án đúng:</strong> {{this.correctAnswer}}</p>
                        </div>
                    {{/each}}
                </div>
            {{else}}
                <p>Không có câu hỏi nào.</p>
            {{/if}}
            
            <div class="mt-3">
                <a href="/" class="btn btn-primary">Quay lại</a>
            </div>
        </div>
    </div>
</div>